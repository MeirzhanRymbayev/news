<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.epam.mrymbayev.entity.News" table="news"
           catalog="MEIR">
        <id name="id" type="long">
            <column name="ID"/>
            <generator class="identity"/>
        </id>
        <property name="title" type="string">
            <column name="TITLE" length="255" not-null="true"/>
        </property>
        <property name="content" type="string">
            <column name="CONTENT" not-null="true"/>
        </property>
        <property name="brief" not-null="true">
            <column name="BRIEF" not-null="true"/>
        </property>
        <property name="dateOfCreation" not-null="true">
            <column name="DATE_OF_CREATION" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>